@model Students.Business.ViewModels.StudentViewModel
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Index";
}
<div class="card">
    <div class="card-header">
        <h5 class="card-title">Students List</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <table class="table datatable-responsive-row-control">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MiddleName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OtherName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EthnicityId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.County)
                            </th>
                            <th>Edit</th>
                            <th>Delete</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Students)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MiddleName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OtherName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EthnicityId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.County.Id)
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" class="fa fa-pen-fancy" asp-route-id="@item.Id"></a>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Delete" class="fa fa-trash" asp-route-id="@item.Id"></a>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" class="fa fa-eye" asp-route-id="@item.Id"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @*<div class="row">
                <div class="col-md-12">
                    Page @(Model.Students.PageCount < Model.Students.PageNumber ? 0 : Model.Students.PageNumber) of @Model.Students.PageCount, Showing @(((Model.Students.PageNumber-1)* Model.Students.PageSize) + @Model.Students.Count) of @Model.Students.TotalItemCount
                    @Html.PagedListPager(Model.Students, page => Url.Action("Index", new { page = page }))
                </div>
            </div>*@
        </div>
    </div>
</div>
